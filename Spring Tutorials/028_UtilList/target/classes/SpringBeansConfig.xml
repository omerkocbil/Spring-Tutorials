<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<!-- util namespace ini ekleyerek collection a ait elementlerin daha kolay yazılımını sağlarız -->
	<bean name = "beanPersonel" class = "com.omerkocbil.Personel" >
		<property name="listemiz">
			<util:list list-class = "java.util.ArrayList">
				<value>Mecnun Çınar</value>
				<value>İsmail Abi</value>
				<value>Hırsız Yavuz</value>
				<value>Erdal Bakkal</value>
			</util:list>
		</property>
	</bean>

</beans>
